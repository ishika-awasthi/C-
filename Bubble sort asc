#include <iostream>
using namespace std;
int main() {
    //bubble sort ascending order
    int n, a[100],i;
    std::cout << "Enter the number of elements: ";
    std::cin >> n;
    std::cout << endl;
    std::cout << "Enter elements: " << "\n";  
    for(i = 0; i < n; i++) {
        cin >> a[i]; }
    std::cout << "Elements are: " << "\n";
    for(i = 0; i < n; i++) {
        std::cout << a[i] << ", "; }
    std::cout<<endl;
    int x,y;
    for(x=0;x<=n-1;x++){
        for(i=0;i< n-x-1;i++){
            if (a[i]>a[i+1]){
                y=a[i];
                a[i]=a[i+1];
                a[i+1]=y;}
            }
        }
    std::cout<<"after sorting:"<<endl;
    for(i = 0; i < n; i++) {
        std::cout << a[i] << ", "; }
    
    }
