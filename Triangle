#include <iostream>

int main() {
    int i, j, n;
    std::cout << "Enter the number of rows: ";
    std::cin >> n;

    for (i = 1; i <= n; i++) {
        for (j = 1; j <= n - i; j++) {
            std::cout << " ";
        }
        for (j = 1; j <= 2 * i - 1; j++) {
            std::cout << "*";
        }
        std::cout << "\n";
    }

    return 0;
}
